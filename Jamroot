lib avformat ;
lib avutil ;
lib avcodec ;
lib pthread ;

lib common
    : [ glob *.c : feed.c sink.c ]
    : <link>static
    ;

exe feed
    : feed.c
      common avformat avcodec avutil
    ;
exe sink
    : sink.c
      common
      pthread
    ;

install stage
    : feed sink
    : <location>.
    ;
